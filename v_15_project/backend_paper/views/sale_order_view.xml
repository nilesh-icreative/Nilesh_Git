<odoo>
  <data>

    <!--Add Field total capacity in sale order from -->
    <record id="sale_order_from_view" model="ir.ui.view">
      <field name="name">sale_order_form</field>
      <field name="model">sale.order</field>
      <field name="inherit_id" ref="sale.view_order_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='partner_id']" position="after">
          <field name="total_capacity"/>
        </xpath>
        <xpath expr="//field[@name='tax_totals_json']" position="before">
          <button type="object" name="calculate_qty" style="font-size: 10px;" class="btn-primary">Calculate Total Capacity</button>
        </xpath>
      </field>
    </record>

  </data>
</odoo>