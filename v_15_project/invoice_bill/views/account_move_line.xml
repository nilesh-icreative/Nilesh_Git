<odoo>
  <data>

     <record id="account_move_line_view" model="ir.ui.view">
        <field name="name">account.move.modify</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
          <xpath expr="//field[@name='invoice_line_ids']/tree" position="inside">
            <field name="vendor_id" optional="hide" attrs="{'column_invisible': [('parent.move_type', '=', 'in_invoice')]}"/>
            <field name="delivery_address_id" optional="hide"/>
            <field name="vendor_price" optional="hide" attrs="{'column_invisible': [('parent.move_type', '=', 'in_invoice')]}"/>
            <field name="planned_gp" optional="hide"/>
            <field name="description" optional="hide"/>
          </xpath>

          <xpath expr="//field[@name='line_ids']/tree" position="inside">
            <field name="vendor_id" invisible="1"/>
            <field name="delivery_address_id" invisible="1"/>
            <field name="vendor_price" invisible="1"/>
            <field name="planned_gp" invisible="1"/>
            <field name="description" invisible="1"/>
          </xpath>
        </field>
    </record>

  </data>
</odoo>