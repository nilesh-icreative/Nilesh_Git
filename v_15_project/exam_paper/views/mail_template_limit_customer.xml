<odoo>
  <data>

    <record id="email_template_limit_customer" model="mail.template">
      <field name="name">Email Template</field>
      <field name="model_id" ref="exam_paper.model_sale_order"/>
        <field name="email_from">nileshicreative@gmail.com</field>
        <field name="email_to">{{object.partner_id.notify_person_email}}</field>
        <field name="subject">Limit Exceed</field>
        <field name="body_html" type="html">
          <div style="margin: 0px; padding: 0px;">
            <p style="margin: 0px; padding: 0px; font-size: 15px;">
              <span>Hello,</span>
              <t t-esc="object.partner_id.email"/>
              <br/><br/>
              <p>
                This is to notify you that your credit/block limit
                has exceed for the <t t-esc="object.partner_id.name"/>.
              </p>
              <br/>
              <p>• Customer Name -<t t-esc="object.partner_id.name"/></p>
              <p>• Limit for Customer -</p>
              <br/><br/>
              <span>Regards</span><br/>
              <span>Aktiv Software</span>
            </p>
          </div>
        </field>
    </record>

  </data>
</odoo>