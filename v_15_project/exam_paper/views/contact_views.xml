<odoo>
  <data>

    <!--Inherit res.partner view-->
    <record model="ir.ui.view" id="view_res_partner">
      <field name="name">res.partner.form</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='company_type']" position="after">
          <field name="credit_limit"/><label for="credit_limit"/>
          <field name="blocking_limit"/><label for="blocking_limit"/><br/>

          <label for="credit_limit_score" attrs="{'invisible': [('credit_limit', '=', False)]}"/>
          <field name="credit_limit_score" style="width:100px;"
                 attrs="{'invisible': [('credit_limit', '=', False)]}"/>

          <label for="blocking_limit_score" attrs="{'invisible': [('blocking_limit', '=', False)]}"/>
          <field name="blocking_limit_score" style="width:100px;"
                 attrs="{'invisible': [('blocking_limit', '=', False)]}"/>
          <field name="notify_person_email" invisible="1"/>

        </xpath>
      </field>
    </record>

  </data>
</odoo>
