<?xml version= "1.0" encoding= "UTF-8"?>

<odoo>
    <record id="config_setting_view" model="ir.ui.view">
        <field name="name">config_settings_view_form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="custom module" string="Odoo Exam" data-key="setting">
<!--                    web_icon = "exam_2,static/description/icon.png"-->
                    <h2>Boolean Check</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <span><b>Install Module</b></span>
                            <div>
                                <field name="module_employee"/>
                            </div>
                            <div>
                                <br/><br/>
                                <span><b>Sale Order</b></span>
                                <field name="sale_order_details_ids"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

