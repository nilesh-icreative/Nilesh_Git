<odoo>
  <data>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="orphans_organization_action_window">
      <field name="name">Organization window</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">res.partner</field>
      <field name="view_mode">kanban,tree,form</field>
      <field name="context" eval="{'default_company_type': 'company','default_ngo_check': True}"/>
      <field name="domain">[('ngo_check','=',True)]</field>
    </record>



    <!-- Top menu item -->

    <menuitem name="NGO" id="orphans_organization_menu_root"/>

    <!-- menu categories -->


    <menuitem name="Orphans Organization" id="orphans_organization_menu" parent="orphans_organization_menu_root"
              action="orphans_organization_action_window"/>

    <menuitem name="Configuration" id="orphans_organization_setting" parent="orphans_organization_menu_root"
              action="orphans_organization_action_window"/>

  </data>
</odoo>