<odoo>
    <data>

    <!-- Organization From View -->

      <record model="ir.ui.view" id="o_organization_form">
      <field name="name">Organization form</field>
      <field name="model">res.partner</field>
      <field name="priority">1</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button icon="fa-globe icon">
                <div class="o_field_widget o_stat_info">
                  <span class="o_stat_text">Organization</span>
                  <span class="o_stat_text">Preview</span>
                </div>
              </button>
            </div>
            <div>
              <field name="name" placeholder="Orphans Organization Name" required="True" style="width:75%; font-size:25px"/>
              <field name="image_1920"  widget="image" class="oe_avatar"/>
            </div>
            <group>
              <group>
                <field name="street" placeholder="Street 1" string="Address"/>
                <field name="street2" string="" placeholder="Street 2"/>
              </group>
              <group>
                <div style="width:50%">
                  <field name="city" style="width:30%" placeholder="City" string=""/>
                  <field name="state_id"  style="width:30%" placeholder="State" string=""/>
                  <field name="zip"  style="width:40%" placeholder="Zip" string=""/>
                  <field name="country_id" placeholder="Country" string=""/>
                </div>
              </group>
              <group>
                <field name="total_member_orphan"/>
                <field name="currency_id" attrs="{'invisible':1}"/>
                <field name="available_fund" widget="monetary"/>
                <field name="total_capacity"/>
                <field name="foundation_years"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
      </record>

    <!-- Organization Tree View -->

      <record model="ir.ui.view" id="o_organization_tree">
      <field name="name">Orphans Expense form</field>
      <field name="model">res.partner</field>
      <field name="priority">1</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="total_member_orphan"/>
          <field name="available_fund"/>
          <field name="total_capacity"/>
          <field name="foundation_years"/>
        </tree>
      </field>
      </record>

    <!-- Organization Kanban View -->

      <record id="ngo_kanban_view" model="ir.ui.view">
        <field name="name">ngo_partner_kanban</field>
        <field name="model">res.partner</field>
        <field name="priority">1</field>
        <field name="arch" type="xml">
          <kanban class="o_res_partner_kanban">
            <field name="id"/>
            <field name="name"/>
            <field name="city"/>
            <field name="state_id"/>
            <field name="total_member_orphan"/>
            <field name="total_capacity"/>
            <templates>
              <t t-name="kanban-box">
                <div t-attf-class="oe_kanban_global_click" style="width:85mm; height:37mm">
                  <div class="o_kanban_image" style="width:45mm;">
                    <img alt="Avatar" style="height:31mm;" t-att-src="kanban_image('res.partner', 'image_1920',record.id.raw_value)"/>
                  </div>
                  <div class="oe_kanban_details">
                    <strong class="o_kanban_record_title" style="font-size:15px;">
                      <span style='margin-right:1em'></span>
                      <b><field name="name"/></b>
                    </strong>
                    <div t-if="record.city.value">
                      <span style='margin-right:1.25em'></span>
                      <t t-esc="record.city.value"/>
                      <t t-esc="record.state_id.value"/>
                    </div>
                    <div t-if="record.total_member_orphan.value">
                      <span style='margin-right:1.25em'></span>
                      <text>Member:</text>
                      <t t-esc="record.total_member_orphan.value"/>
                    </div>
                    <div t-if="record.total_capacity.value" >
                      <span style='margin-right:1.25em'></span>
                      <text>Capacity:</text>
                      <t t-esc="record.total_capacity.value"/>
                    </div>
                    <div><p/>
                      <span style='margin-right:1.25em'></span>
                      <button type="action" name="%(orphans_request_action_window)d" class="btn-primary"><span>Request</span></button>
                      <span style='margin-right:1.25em'></span>
                      <button type="action" name="%(o_donation_action_window)d" class="btn-primary"><span>Donation</span></button>
                    </div>
                  </div>
                </div>
              </t>
            </templates>
          </kanban>
        </field>
      </record>

    </data>
</odoo>