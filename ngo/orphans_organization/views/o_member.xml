<odoo>
  <data>
    <!-- explicit list view orphans Member Form View -->

      <record model="ir.ui.view" id="orphans_m_form">
      <field name="name">Orphans Member form</field>
      <field name="model">orphans.member</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button attrs="{'invisible':[('designation','=','member')]}" name="%(orphans_request_tree_action)d" type="action" icon="fa-bell-o" class="oe_highlight">
                <div class="o_field_widget o_stat_info">
                  <span class="o_stat_text">Request</span>
                </div>
              </button>
              <button attrs="{'invisible':[('designation','=','member')]}" name="%(orphans_advertise_action_window)d" type="action" icon="fa-bullhorn" class="oe_highlight">
                <div class="o_field_widget o_stat_info">
                  <span class="o_stat_text">Advertising</span>
                </div>
              </button>
            </div>
            <group>
              <group>
                <field name="name"/>
                <field name="dob"/>
                <field name="age"/>
              </group>
              <group>
                <field name="g_name"/>
                <field name="o_organization" options="{'no_quick_create':True,'no_create_edit':True,'no_open': True,}"/>
              </group>
            </group>
            <group>
              <group>
                <field name="s1" placeholder="Street 1"/>
                <field name="s2" string="" placeholder="Street 2"/>
              </group>
              <group>
                <div style="width:50%">
                  <field name="city" style="width:30%" placeholder="City" string=""/>
                  <field name="state"  style="width:30%" placeholder="State" string=""/>
                  <field name="zip"  style="width:40%" placeholder="Zip" string=""/>
                  <field name="country" placeholder="Country" string=""/>
                </div>
              </group>
            </group>
            <group>
              <group>
                <field name="designation" string="Designation"/>
              </group>
            </group>
          </sheet>
        </form>
      </field>
      </record>



    <!-- Orphans Member Tree View -->

    <record model="ir.ui.view" id="orphans_member_form">
      <field name="name">Orphans Member form</field>
      <field name="model">orphans.member</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="o_organization"/>
          <field name="designation"/>
        </tree>
      </field>
    </record>


    <!-- orphans Member Action -->
    <record model="ir.actions.act_window" id="orphans_member_action_window">
      <field name="name">Orphans Member window</field>
      <field name="res_model">orphans.member</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Manager Request Confirm tree View -->

    <record model="ir.actions.act_window" id="orphans_request_tree_action">
      <field name="name">Orphans Request window</field>
      <field name="res_model">orphans.request</field>
      <field name="view_mode">tree</field>
      <field name="view_id" ref="orphans_request_tree_view"/>
    </record>

    <menuitem name="Orphans member" id="orphans_member_menu" parent="orphans_organization_menu_root"
              action="orphans_member_action_window"/>
  </data>
</odoo>