<odoo>
  <data>
    <!-- explicit list view orphans definition -->
    <record model="ir.ui.view" id="orphans_a_form">
      <field name="name">Orphans Member form</field>
      <field name="model">orphans.advertise</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button  name="s_button" type="object" icon="fa-globe icon">
                <div class="o_field_widget o_stat_info">
                  <span class="o_stat_text">Advertise</span>
                  <span class="o_stat_text">Preview</span>
                </div>
              </button>
            </div>
            <div>
              <field  options="{'no_open':True}" name="dona_organization" placeholder="Orphans Organization Name" required="True" style="width:55%; font-size:25px"/>
              <field  name="image"  widget="image" class="oe_avatar"/>
            </div>
            <group>
              <group>
                <field name="exp_dates" style="width:50%;"/>
                <field name="avl_seats" style="width:50%;"/>
              </group>
            </group>
            <group>
                <field name="facilities"/>
            </group>
            <group>
                <field name="address"/>
              </group>
          </sheet>
        </form>
      </field>
    </record>

    <record model="ir.ui.view" id="orphans_advertise_form">
      <field name="name">Orphans Advertise form</field>
      <field name="model">orphans.advertise</field>
      <field name="arch" type="xml">
        <tree>
          <field name="dona_organization"/>
          <field name="avl_seats"/>
          <field name="exp_dates"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="orphans_advertise_action_window">
      <field name="name">Orphans Advertise window</field>
      <field name="res_model">orphans.advertise</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>

    <!-- actions Advertise Fore View -->

    <record model="ir.actions.act_window" id="orphans_advertise_action_window1">
      <field name="name">Orphans Advertise window</field>
      <field name="res_model">orphans.advertise</field>
      <field name="view_mode">form</field>
    </record>

    <menuitem name="Advertise" id="orphans_menu_adv" parent="orphans_organization_menu_root"
              action="orphans_advertise_action_window"/>

    <menuitem name="Advertise" id="orphans_advertise_menu" parent="orphans_organization_setting"
              action="orphans_advertise_action_window"/>



  </data>
</odoo>
